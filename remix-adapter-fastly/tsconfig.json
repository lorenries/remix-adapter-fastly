{
  "include": [
    "**/*.ts"
  ],
  "compilerOptions": {
    "lib": [
      "ES2021",
    ],
    "target": "ES2021",
    "types": [
      "@fastly/js-compute"
    ],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "declaration": true,
    "emitDeclarationOnly": false,
    "outDir": "../dist",
    "rootDir": ".",
    // Avoid naming conflicts between history and react-router-dom relying on
    // lib.dom.d.ts Window and this being a WebWorker env.
    "skipLibCheck": true
  }
}
